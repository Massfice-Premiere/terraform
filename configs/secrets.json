[
  {
     "name": "database-connection-secret",
     "namespace": "example",
     "type": "Opaque",
     "location": "apps/standard/example/database-connection-secret.yaml",
     "data": {
        "MONGO_URI": "${MONGO_URI_PROD}",
        "MONGO_HOST": "${MONGO_HOST_PROD}",
        "MONGO_USERNAME": "${MONGO_USERNAME_PROD}",
        "MONGO_PASSWORD": "${MONGO_PASSWORD_PROD}"
     }
  },
  {
     "name": "database-connection-secret",
     "namespace": "example2",
     "type": "Opaque",
     "location": "apps/standard/example2/database-connection-secret.yaml",
     "data": {
        "MONGO_URI": "${MONGO_URI_NONPROD}",
        "MONGO_HOST": "${MONGO_HOST_NONPROD}",
        "MONGO_USERNAME": "${MONGO_USERNAME_NONPROD}",
        "MONGO_PASSWORD": "${MONGO_PASSWORD_NONPROD}"
     }
  },
  {
     "name": "pull-secret",
     "namespace": "example",
     "type": "kubernetes.io/dockerconfigjson",
     "location": "apps/standard/example/pull-secret.yaml",
     "data": {
        ".dockerconfigjson": "${DOCKER_CONFIG}"
     }
  },
  {
     "name": "pull-secret",
     "namespace": "example2",
     "type": "kubernetes.io/dockerconfigjson",
     "location": "apps/standard/example2/pull-secret.yaml",
     "data": {
        ".dockerconfigjson": "${DOCKER_CONFIG}"
     }
  }
]